@using System.Globalization
@using by.Reba.Application.Models.Account
@model EditUserVM

@{
    ViewData["Title"] = Model.Nickname;
    if (Model.IsAdmin)
    {
        Layout = "_AdminLayout";
    }
}
<form asp-controller="Account" asp-action="Edit" method="post">
<input type="hidden" name="@nameof(Model.Id)" value="@Model.Id"/>

<div class="d-flex flex-column gap-2 gap-md-5 text-success">
    <div class="d-flex flex-row gap-2 gap-lg-5">
        <div class="d-flex flex-row flex-md-column gap-1 gap-md-3 p-0 px-lg-3 flex-grow-1">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                <div class="d-flex flex-row gap-1 gap-lg-3 align-items-center">
                    <img src="~/@Model.AvatarUrl" alt="avatar" height="width" width="50%" class="rounded-circle" />
                    <div class="d-flex flex-column align-items-start">
                        <h2 class="">@Model.Nickname</h2>
                    </div>
                </div>
            </div>

            <div class="my-3">
                <label asp-for="Nickname" class="form-label text-success">Никнейм</label>
                <input type="text" asp-for="Nickname" class="form-control">
            </div>
            <span asp-validation-for="Nickname" class="text-danger"></span>

            <input type="text" class="form-control" name="@nameof(Model.AvatarUrl)" value="@Model.AvatarUrl"/>
        </div>

        <div class="d-flex flex-column pe-1 justify-content-center">
            <p class="text-center m-0">Любимые категории:</p>
            <ul class="list-group">
            @foreach (var category in Model.Categories)
            {
                <li class="list-group-item bg-lightgrey">
                    <input class="form-check-input" type="checkbox" name="@nameof(Model.CategoriesId)" checked="@category.Selected" value="@category.Value">
                    <label class="form-check-label ms-3">@category.Text</label>
                </li>
            }
            </ul>
        </div>

        <div class="d-flex justify-content-center flex-column w-100">
            <h5 class="text-success mb-3">Позитивность:</h5>
            <ul class="list-group mb-3">
                @foreach (var rating in Model.Ratings)
                {
                    <li class="list-group-item bg-lightgrey">
                        <input class="form-check-input" type="radio" name="@nameof(Model.RatingId)" checked="@rating.Selected" value="@rating.Value">
                        <label class="form-check-label ms-3">@rating.Text</label>
                    </li>
                }
            </ul>
        </div>
    </div> 
</div>

<div class="form-group pt-3">
    <button type="submit" class="btn btn-success col-12 px-3">Подтвердить</button>
</div>

</form>


