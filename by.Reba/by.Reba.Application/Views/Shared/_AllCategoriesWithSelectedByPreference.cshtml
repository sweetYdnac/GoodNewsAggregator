@using by.Reba.Application.Models.Category

@model AllCategoriesVM

<ul class="list-group">
    @foreach (var category in Model.Categories)
    {
        <li class="list-group-item bg-lightgrey">
            <input class="form-check-input" type="checkbox" name="@Model.CategoriesIdName" checked="@category.Selected" value="@category.Value" id="@($"check{category.Value}")">
            <label for="@($"check{category.Value}")" class="form-check-label ms-3">@category.Text</label>
        </li>
    }
</ul>
