@using by.Reba.Application.Models.Article

@model CreateOrEditVM

@{
    ViewData["Title"] = "Создать/редактировать новость";
}
<form asp-controller="Article" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Название</label>
        <input asp-for="Title" type="text" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>

        <label asp-for="PosterUrl" class="form-label">Превью</label>
        <input asp-for="PosterUrl" type="url" class="form-control">
        <span asp-validation-for="PosterUrl" class="text-danger"></span>

        <label asp-for="Text" class="form-label">Контент</label>
        <input asp-for="Text" type="text" class="form-control">
        <span asp-validation-for="Text" class="text-danger"></span>
        
        <input type="hidden" value="@Model.Categories"/>
        <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-select"></select>

        <input type="hidden" value="@Model.Ratings"/>
        <select asp-for="RatingId" asp-items="@Model.Ratings" class="form-select"></select>

        <input type="hidden" value="@Model.Sources" />
        <select asp-for="SourceId" asp-items="@Model.Sources" class="form-select"></select>

        <button type="submit" class="btn btn-primary">Подтвердить</button>
    </div>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation//dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}