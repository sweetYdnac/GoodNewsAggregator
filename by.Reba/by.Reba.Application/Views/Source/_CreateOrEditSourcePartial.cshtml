@using by.Reba.Application.Models.Source
@model CreateOrEditSourceVM

<div class="d-flex flex-column gap-3 col-12 offset-0 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <input asp-for="Id" value="@Model.Id" type="hidden"/>
    <div>
        <label asp-for="Name" class="form-label">Наименование</label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="RssUrl" class="form-label">Rss путь</label>
        <input asp-for="RssUrl" type="url" class="form-control">
        <span asp-validation-for="RssUrl" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="@Model.SourceTypes" class="form-label">Тип источника</label>
        <select asp-for="Source" asp-items="@Model.SourceTypes" class="form-select"></select>
        <span asp-validation-for="Source" class="text-danger"></span>   
    </div>

    <button type="submit" class="btn btn-success">Подтвердить</button>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation//dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}