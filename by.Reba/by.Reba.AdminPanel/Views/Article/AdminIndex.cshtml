@using by.Reba.AdminPanel.Models.Article
@model ArticlesListVM

@{
    ViewData["Title"] = "Reba.by";
}


<div class="row">
    <div class="col-2">
        <button class="btn btn-primary mb-5" type="button" data-bs-toggle="collapse" data-bs-target="#filter" aria-expanded="false" aria-controls="collapseExample">
            Фильтры 
        </button>

        <div class="collapse mb-5" id="filter">
            <div class="card card-body">
                <form asp-controller="Article" asp-action="Filter" method="get">
                    <h5 class="text-center">Категории:</h5>
                        @foreach (var category in Model.Categories)
                        {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="@nameof(Model.Categories)" value="@category.Id">
                            <label class="form-check-label">
                                @category.Title
                            </label>
                        </div>
                        }
                    <hr />
                    <h5 class="text-center">Источники:</h5>
                    @foreach (var category in Model.Sources)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="@nameof(Model.Categories)" value="@category.Id">
                            <label class="form-check-label">
                                @category.Name
                            </label>
                        </div>
                    }
                    <hr />
                    <h6>с</h6>
                    <input type="date" value="@Model.From.ToString("yyyy-MM-dd")" />
                    <hr />
                    <h6>по</h6>
                    <input type="date" value="@Model.To.ToString("yyyy-MM-dd")" />
                    <hr />
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Найти</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-2">
        <a asp-controller="Article" asp-action="Create" class="btn btn-warning">
            Создать новость
        </a>
    </div>
</div>


<table class="table table-hover align-middle text-center table-bordered">
    <thead class="align-middle">
        <tr class="table-success">
            <th>Название</th>
            <th>Превью</th>
            <th>Дата публикации</th>
            <th>Категория</th>
            <th>Источник</th>
            <th>Позитивность</th>
            <th>Оценка пользователей</th>
            <th>Кол-во комментариев</th>
            <th>Управление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td class="text-start">@article.Title</td>
                <td>
                    <img src="@article.PosterUrl" alt="article" class="img-fluid">
                </td>
                <td>@article.PublicationDate.ToString("dd-MM-yyyy")</td>
                <td>@article.CategoryName</td>
                <td>@article.SourceName</td>
                <td>@article.RatingName</td>
                <td>@article.Assessment</td>
                <td>@article.CommentsCount</td>
                <td>
                    <div class="vstack gap-2">
                        <a asp-controller="Article" asp-action="Edit" class="btn btn-warning">
                            Редактировать
                        </a>
                        <a asp-controller="Article" asp-action="Delete" class="btn btn-danger">
                            Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
