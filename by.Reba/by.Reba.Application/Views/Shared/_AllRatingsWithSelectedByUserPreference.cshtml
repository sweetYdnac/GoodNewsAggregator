@using by.Reba.Application.Models.PositivityRating
@model AllRatingsVM

<ul class="list-group mb-3">
    @foreach (var rating in Model.PositivityRatings)
    {
        <li class="list-group-item bg-lightgrey">
            <input class="form-check-input" type="radio" name="@nameof(Model.MinPositivityRating)" checked="@rating.Selected" value="@rating.Value" id="@($"radio{rating.Value}")">
            <label for="@($"radio{rating.Value}")" class="form-check-label ms-3">@rating.Text</label>
        </li>
    }
</ul>
