@using by.Reba.Application.Models.Account
@model CreateUserPreferenceVM

@{
    ViewData["Title"] = "Настройка предпочтений";
}

<h2 class="mb-5 text-center text-success">Настройка предпочтений</h2>

<form asp-controller="Account" asp-action="CreatePreference" method="post">
    <input type="hidden" asp-for="Categories" value="@Model.Categories" />
    <div class="d-flex flex-row justify-content-between gap-3 mb-3">
        <div class="d-flex flex-column w-100 px-1 px-md-3">
            <h5 class="align-self-center text-success mb-3">Предпочитаемые категории:</h5>
            <ul class="list-group">
                @if (Model.Categories.Any())
                {
                    @foreach (var category in Model.Categories)
                    {
                        <li class="list-group-item bg-lightgrey">
                            <input class="form-check-input" type="checkbox" name="@nameof(Model.CategoriesId)" value="@category.Value">
                            <label class="form-check-label ms-3">@category.Text</label>
                        </li>
                    }
                }
               
            </ul>
        </div>
        <span asp-validation-for="CategoriesId" class="text-danger"></span>

        <input type="hidden" asp-for="Ratings" value="@Model.Ratings" />
        <div class="d-flex flex-column w-100">
            <h5 class="align-self-center text-success mb-3">Предпочитаемая позитивность:</h5>
            <ul class="list-group mb-3">
                @if (Model.Ratings.Any())
                {
                    @foreach (var rating in Model.Ratings)
                    {
                    <li class="list-group-item bg-lightgrey">
                        <input class="form-check-input" type="radio" name="@nameof(Model.RatingId)" checked="@rating.Selected" value="@rating.Value">
                        <label class="form-check-label ms-3">
                            @rating.Text
                        </label>
                    </li>
                    }
                }
            </ul>
        </div>
        <span asp-validation-for="RatingId" class="text-danger"></span>
    </div>

    <small class="text-muted ps-3">Предпочтения можно настроить позже в настройках.</small>

    <div class="form-group pt-3 px-5">
        <button type="submit" class="btn btn-success col-12 col-md-6 offset-md-3 col-lg-8 offset-lg-2">Далее</button>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation//dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}