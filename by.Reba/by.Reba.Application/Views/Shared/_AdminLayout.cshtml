<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Админ панель</title>
        <link rel="shortcut icon" href="~/favicon.png" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <partial name="_LayoutHeader"></partial>
        <main role="main" class="m-1 me-md-3">
            <div class="d-flex gap-1 gap-sm-2">
                <partial name="_AdminAside"></partial>
                <div class="flex-grow-1">
                    @RenderBody()
                </div>
            </div>
        </main>
        <partial name="_LayoutFooter"></partial>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
